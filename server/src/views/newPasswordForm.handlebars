<div class="h-screen flex justify-center">
    <div class="mx-auto flex justify-center mt-20 container">
        <div class="w-2/4">
            <h2 class="text-xl font-bold mb-10 w-full">Insert your new password</h2>
            <div class="">
                <form id="new-password-form" class="w-full">
                    <div class="input-field">
                        <label for="password-input"> Password </label>
                        <input type="text" id="create-account-age" name="password"
                            class=" rounded-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-2 px-4 bg-white text-gray-700 placeholder-gray-400 shadow-sm text-base focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                            placeholder="New Password..." />
                    </div>
                    <input type="text" name="token" readonly hidden value={{token}}>
                    <input class="px-4 py-2 text-white cursor-pointer bg-green-500 hover-bg-green-800 rounded-md"
                        type="submit" value="Update password">
                </form>
            </div>
        </div>
    </div>
</div>



<script src="/statics/js/newPasswordForm.js"></script>